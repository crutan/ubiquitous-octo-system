<main class="container container__presentation">
  <div class="presentation">
    <div class="header">
      <h1><%= @presentation.name %> - <%= @presentation.slideshow.name %></h1>
    </div>
    <% @presentation.slideshow.slides.each do |slide| %>
      <div class="slide">
        <div class="slide__title">
          <h2><%= slide.name %></h2>
        </div>

        <div class="slide__body">
          <%= slide.body %>
        </div>
      </div>
      <div class="controls">
        <div class="controls__breadcrumb">
          <%= slide.position %> / <%= @presentation.slideshow.slides.count %>
        </div>
        <div class="controls_notes">
          <%= slide.notes %>
        </div>
      </div>
    <% end %>
  </div>
</main>